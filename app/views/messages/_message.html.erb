<div id="<%= dom_id message %>">
  <p>
    <strong>Published at:</strong>
    <%= message.published_at %>
  </p>

  <p>
    <strong>Sender:</strong>
    <%= message.sender %>
  </p>

  <p>
    <strong>Context:</strong>
    <%= message.context %>
  </p>

</div>


<div id="<%= dom_id message %>">
  <p><%= message.published.strftime("%Y/%m/%d %H:%M:%S") %>: 
    <%= message.sender %>: <%= message.content %></p>
</div>